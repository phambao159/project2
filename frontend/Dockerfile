# Stage 1: Build app báº±ng Node
FROM node:20

WORKDIR /var/www

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build


FROM nginx:alpine


COPY --from=builder /app/build /usr/share/nginx/html


COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
